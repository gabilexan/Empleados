@model Empleados.Models.Empleado
@{
    ViewData["Title"] = "Eliminar  Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@* Vista para  eliminar empleado  *@

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Eliminar empleado</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="POST" asp-action="DeleteEmpleado">
                <input type="hidden" asp-for="Idempleado" />
                @* Sentencia para validar el modelo *@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <label asp-for="NombreEmpleado" class="control-label"></label>
                    <input asp-for="NombreEmpleado" class="form-control" disabled />
                    <span asp-validation-for="NombreEmpleado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApellidoEmpleado" class="control-label"></label>
                    <input asp-for="ApellidoEmpleado" class="form-control" disabled />
                    <span asp-validation-for="ApellidoEmpleado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TelefonoEmpleado" class="control-label"></label>
                    <input asp-for="TelefonoEmpleado" class="form-control" disabled />
                    <span asp-validation-for="TelefonoEmpleado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CorreoEmpleado" class="control-label"></label>
                    <input asp-for="CorreoEmpleado" class="form-control" disabled />
                    <span asp-validation-for="CorreoEmpleado" class="text-danger"></span>
                </div>

                @*<div class="form-group">
            <label asp-for="Foto" class="control-label"></label>
            <input asp-for="Foto" class="form-control" type="file" />
            <span asp-validation-for="Foto" class="text-danger"></span>
        </div>*@

                <div class="form-group">
                    <label asp-for="Foto" class="control-label">Foto Empleado</label>
                    <input asp-for="Foto" class="form-control" id="Foto" disabled>
                    <span asp-validation-for="Foto" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaContratacion" class="control-label"></label>
                    <input asp-for="FechaContratacion" class="form-control" disabled />
                    <span asp-validation-for="FechaContratacion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Eliminar empleado" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

@* Validacion del lado del cliente *@
@section Scripts{ 
    @{<partial name="_ValidationScriptsPartial" />}
}

